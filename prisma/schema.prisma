// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           Int             @id @default(autoincrement())
  name         String
  description  String?
  actualPrice  Float
  sellingPrice Float
  category     String
  boxpack      Boolean
  categories   String[]        @default([])
  sku          String          @unique
  stock        Int             @default(0)
  images       ProductImage[]
  carts        Cart[]  
  reviews      Review[]
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
}

model ProductImage {
  id          Int      @id @default(autoincrement())
  product     Product  @relation(fields: [productId], references: [id])
  productId   Int
  url         String
  alt         String?
  createdAt   DateTime @default(now())
}

model Review {
  id          Int      @id @default(autoincrement())
  product     Product  @relation(fields: [productId], references: [id])
  productId   Int
  rating      Int
  comment     String?
  reviewer    String?
  createdAt   DateTime @default(now())
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  carts    Cart[]
}

model Cart {
  id            Int      @id @default(autoincrement())
  userId        Int
  productId     Int
  quantity      Int      @default(1)
  priceAtAdd    Float
  createdAt     DateTime @default(now())

  user          User     @relation(fields: [userId], references: [id])
  product       Product  @relation(fields: [productId], references: [id])
}

// --------------------- New Accessory Model ---------------------
model Accessory {
  id             Int              @id @default(autoincrement())
  name           String
  description    String?
  actualPrice    Float
  sellingPrice   Float
  brand          String
  compatibility  String?
  boxpack        Boolean
  sku            String           @unique
  stock          Int              @default(0)
  images         AccessoryImage[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

model AccessoryImage {
  id           Int         @id @default(autoincrement())
  accessory    Accessory   @relation(fields: [accessoryId], references: [id])
  accessoryId  Int
  url          String
  alt          String?
  createdAt    DateTime    @default(now())
}
