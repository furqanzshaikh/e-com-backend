generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}
model Product {
  id           Int             @id @default(autoincrement())
  name         String
  description  String?
  actualPrice  Float
  sellingPrice Float
  category     String
  categories   String[]        @default([])    // If you want multiple categories as array
  sku          String          @unique
  stock        Int             @default(0)
  images       ProductImage[]
  reviews      Review[]
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
}

model ProductImage {
  id          Int      @id @default(autoincrement())
  product     Product  @relation(fields: [productId], references: [id])
  productId   Int
  url         String
  alt         String?
  createdAt   DateTime @default(now())
}

model Review {
  id          Int      @id @default(autoincrement())
  product     Product  @relation(fields: [productId], references: [id])
  productId   Int
  rating      Int      // e.g. 1 to 5 stars
  comment     String?
  reviewer    String?  // reviewer name or userId if auth involved
  createdAt   DateTime @default(now())
}
